<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    android:orientation="vertical"
    tools:context=".Login_choiceActivity">

    <ImageView
        android:layout_width="181dp"
        android:layout_height="152dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/tk_initials" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_choice"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/phone_login"
            android:layout_width="276dp"
            android:layout_height="44dp"
            android:background="@drawable/rounded_edge_teal"
            android:drawableStart="@drawable/call_icon"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="Login with phone number"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/email_login"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_edge_teal"
            android:drawableStart="@drawable/email_icon"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="Continue with Google"
            android:textSize="17sp" />

    </LinearLayout>


</LinearLayout>